<Window x:Class="Grindr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Grindr"
        mc:Ignorable="d"
        Title="Grindr" Height="500" Width="926" MinHeight="500" MinWidth="926">
    <Grid>
        <TabControl x:Name="BotTabControl" Margin="0,38,0,0">
            <TabItem Header="Summary">
                <Grid Background="#FFE5E5E5" Margin="0,0,0,-8"/>
            </TabItem>
        </TabControl>
        <Button Content="Add Bot" HorizontalAlignment="Left" Margin="2,4,0,0" VerticalAlignment="Top" Width="75" Click="AddBotButton_Click" Height="29"/>
        <Button Content="Remove Bot" HorizontalAlignment="Left" Margin="82,4,0,0" VerticalAlignment="Top" Width="75" Click="RemoveBotButton_Click" Height="29"/>
    </Grid>
</Window>
